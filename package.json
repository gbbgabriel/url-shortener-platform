{
  "name": "url-shortener-platform",
  "version": "1.0.0",
  "description": "URL Shortener Platform - Release 1.0.0: Observability + CI/CD + Complete Platform",
  "author": "Gabriel Barbosa",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=22.17.1 <23.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "nest build",
    "build:url-shortener-service": "nest build url-shortener-service",
    "build:identity-service": "nest build identity-service",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:identity-service": "nest start identity-service",
    "start:identity-service:dev": "nest start identity-service --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:db:setup": "docker compose -f docker-compose.test.yml up -d postgres-test",
    "test:db:teardown": "docker compose -f docker-compose.test.yml down",
    "test:db:reset": "npm run test:db:teardown && npm run test:db:setup && sleep 5 && npm run db:push:test",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:push:test": "DATABASE_URL=postgresql://test_user:test_password@localhost:5433/test_db prisma db push",
    "db:studio": "prisma studio",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "keywords": [],
  "type": "commonjs",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/*.spec.ts"
    ],
    "testPathIgnorePatterns": [
      ".*\\.integration\\.spec\\.ts$",
      ".*\\.e2e\\.spec\\.ts$"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "apps/**/*.(t|j)s",
      "libs/**/*.(t|j)s",
      "!apps/**/*.spec.ts",
      "!apps/**/*.integration.spec.ts",
      "!apps/**/*.e2e.spec.ts",
      "!apps/**/main.ts",
      "!libs/**/*.spec.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@app/(.*)$": "<rootDir>/libs/$1/src",
      "^@libs/(.*)$": "<rootDir>/libs/$1/src"
    }
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.2.0",
    "@nestjs/common": "^11.1.5",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.5",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-fastify": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@prisma/client": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^5.4.0",
    "helmet": "^8.1.0",
    "nest-winston": "^1.10.2",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.12.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "swagger-ui-dist": "^5.27.0",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "jest": "^30.0.5",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  }
}
