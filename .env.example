# =======================================================
# Environment Variables Template - URL Shortener Platform
# =======================================================

# ===========================================
# APPLICATION
# ===========================================
NODE_ENV=development
PORT=3002
BASE_URL=http://localhost:8080
REDIRECT_BASE_URL=http://localhost:3002

# ===========================================
# DATABASE
# ===========================================
POSTGRES_DB=urlshortener
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://admin:your_secure_password_here@postgres:5432/urlshortener

# ===========================================
# CACHE
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ===========================================
# API GATEWAY
# ===========================================
KRAKEND_PORT=8080

# ===========================================
# OBSERVABILITY
# ===========================================
ENABLE_SENTRY=false
ENABLE_METRICS=true
LOG_LEVEL=info

# ===========================================
# DOCKER PORTS (HOST MACHINE)
# ===========================================
HOST_POSTGRES_PORT=5432
HOST_REDIS_PORT=6379
HOST_SERVICE_PORT=3002
HOST_GATEWAY_PORT=8080

# ===========================================
# VOLUMES
# ===========================================
POSTGRES_VOLUME_NAME=urlshortener_postgres_data
REDIS_VOLUME_NAME=urlshortener_redis_data

# ===========================================
# NETWORK
# ===========================================
NETWORK_NAME=urlshortener-network


JWT_SECRET=super-secret-jwt-key-for-development-only
JWT_EXPIRES_IN=24h