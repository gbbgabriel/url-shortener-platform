# =======================================================
# URL Shortener Platform - Environment Variables
# =======================================================

# ==================== GENERAL ====================
NODE_ENV=development
BASE_URL=http://localhost:8080

# ==================== DATABASE ====================
DATABASE_URL=postgresql://admin:password@localhost:5432/urlshortener
TEST_DATABASE_URL=postgresql://admin:password@localhost:5432/urlshortener_test

# ==================== REDIS ====================
REDIS_URL=redis://localhost:6379

# ==================== JWT ====================
JWT_SECRET=your-super-secure-jwt-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==================== MICROSERVICES PORTS ====================
IDENTITY_SERVICE_PORT=3001
URL_SHORTENER_SERVICE_PORT=3002
ANALYTICS_SERVICE_PORT=3003
API_GATEWAY_PORT=8080

# ==================== OBSERVABILITY ====================
# Sentry
ENABLE_SENTRY=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Prometheus
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# APM
ENABLE_APM=false
APM_SERVICE_NAME=url-shortener
APM_SERVER_URL=http://localhost:8200

# OpenTelemetry
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==================== LOGGING ====================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/

# ==================== RATE LIMITING ====================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ==================== CORS ====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# ==================== FEATURES ====================
ENABLE_SWAGGER=true
ENABLE_CORS=true

# ==================== MULTI-TENANCY ====================
ENABLE_MULTI_TENANT=false
DEFAULT_TENANT=default

# ==================== THIRD PARTY SERVICES ====================
# AWS (if needed for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=url-shortener-assets

# SendGrid (for emails)
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@url-shortener.com
